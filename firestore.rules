rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function hasRole(role) {
      return isSignedIn() && request.auth.token.role == role;
    }

    function isAdmin() {
      return hasRole('admin');
    }

    match /users/{uid} {
      allow read: if isAdmin() || request.auth.uid == uid;
      allow create: if request.auth.uid == uid;
      allow update: if request.auth.uid == uid || isAdmin();
      allow delete: if isAdmin();
    }

    match /courses/{courseId} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.isActive == true);
      allow write: if isAdmin();

      match /sessions/{sessionId} {
        allow read: if isAdmin() || (isSignedIn() && resource.data.isActive == true);
        allow write: if isAdmin();
      }

      match /materials/{materialId} {
        allow read: if isAdmin() || (isSignedIn() && resource.data.isActive == true);
        allow write: if isAdmin();
      }
    }

    match /payments/{paymentId} {
      allow read: if isAdmin() || request.auth.uid == resource.data.uid;
      allow create: if false;
      allow update, delete: if false;
    }

    match /enrollments/{enrollmentId} {
      allow read: if isAdmin() || request.auth.uid == resource.data.uid;
      allow write: if isAdmin();
    }

    match /attendance/{courseId}/sessions/{sessionId}/records/{uid} {
      allow read: if isAdmin();
      allow write: if false;
    }
  }
}
